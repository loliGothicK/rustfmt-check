{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentWidth": 4,
        "indentStyle": "space"
    },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
    "javascript": {
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        },
        "formatter": {
            "quoteStyle": "single",
            "jsxQuoteStyle": "single",
            "semicolons": "always",
            "arrowParentheses": "asNeeded"
        }
    }
}
